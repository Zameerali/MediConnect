@{
    ViewData["Title"] = "Book Appointment";
}
@{
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}


<div class="container mt-4">
    <h2 class="mb-4 text-center">Welcome, Dr. Zameer</h2>

    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Today's Appointments</h5>
                    <p class="card-text display-6">8</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Appointments</h5>
                    <p class="card-text display-6">15</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Patients Seen</h5>
                    <p class="card-text display-6">120</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Schedule</h5>
                    <p class="card-text display-6">Active</p>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header fw-bold">
                    Next Appointment
                </div>
                <div class="card-body">
                    <p><strong>Patient:</strong> Ahmed</p>
                    <p><strong>Time:</strong> 10:30 AM</p>
                    <p><strong>Reason:</strong> Follow-up Consultation</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header fw-bold">
                    Quick Links
                </div>
                <div class="card-body">
                    <a class="btn btn-primary w-100 mb-2" asp-controller="Doctor" asp-action="ManageAppointments">Manage Appointments</a>
                    <a class="btn btn-secondary w-100 mb-2" asp-controller="Doctor" asp-action="Schedule">View Schedule</a>
                    <a class="btn btn-outline-dark w-100" asp-controller="Doctor" asp-action="Profile">My Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>
