<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MediConnect</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MediConnect.styles.css" asp-append-version="true" />

	<style>
		.navbar-nav .nav-item {
			margin-left: 15px;
		}

		.logout-btn {
			background-color: #dc3545;
			color: white;
			border: none;
			padding: 8px 15px;
			border-radius: 5px;
			text-decoration: none;
		}

			.logout-btn:hover {
				background-color: #bb2d3b;
				color: white;
			}
	</style>
</head>
<body>

	<header>
		<nav class="navbar navbar-expand-lg bg-body-tertiary py-3">
			<div class="container">

				<a class="navbar-brand fs-2 fw-bold" asp-controller="Home" asp-action="Index">MediConnect</a>

				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" asp-controller="Doctor" asp-action="Dashboard">Dashboard</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Doctor" asp-action="ManageAppointments">Manage Appointments</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Doctor" asp-action="Schedule">Schedule</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Doctor" asp-action="Profile">Profile</a>
					</li>
				</ul>

				<div class="ms-auto">
					<a class="logout-btn" asp-controller="Account" asp-action="Login">Logout</a>
				</div>
			</div>
		</nav>
	</header>

	<div class="container content">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container text-center">
			<h2>&copy; 2025 - MediConnect</h2>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
