            </thead>
            <tbody>
                <tr>
                    <td>March 28, 2025</td>
                    <td>10:00 AM</td>
                    <td>Dr. Zameer Ali</td>
                    <td><span class="badge bg-warning">Pending</span></td>
                </tr>
                <tr>
                    <td>April 5, 2025</td>
                    <td>2:30 PM</td>
                    <td>Dr. Hamza</td>
                    <td><span class="badge bg-success">Confirmed</span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <a href="BookAppointment" class="btn btn-primary w-100">Book Appointment</a>
        </div>
        <div class="col-md-4">
            <a href="Profile" class="btn btn-secondary w-100">View Profile</a>
        </div>
        <div class="col-md-4">
            <a href="Appointments" class="btn btn-info w-100">View All Appointments</a>
        </div>
    </div>
</div>
