@{
    ViewData["Title"] = "My Appointments";
}
@{
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}
@model List<MediConnectwithAuthentication.Models.Appointment>


<div class="container mt-4">
    <h2 class="text-center mb-4">My Appointments</h2>

    <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Doctor</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="appointmentsTableBody">
                @if (Model != null && Model.Any())
                {
                    foreach (var appointment in Model)
                    {
                        <tr data-id="@appointment.Id">
                            <td>@appointment.DoctorName</td>
                            <td>@appointment.AppointmentDate.ToString("MMMM dd, yyyy")</td>
                            <td>@appointment.TimeSlot</td>
                            <td><span class="badge bg-warning text-dark">@appointment.Status</span></td>
                            <td>
                                <a href="@Url.Action("DeleteAppointment", "Patient", new { id = appointment.Id })" class="btn btn-sm btn-danger">Cancel</a>
                                <a href="@Url.Action("EditAppointment", "Patient", new { id = appointment.Id })" class="btn btn-sm btn-secondary">Reschedule</a>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No appointments found.</td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/signalr.js"></script>
    <script src="~/js/connections.js"></script>
}
