@model MediConnectwithAuthentication.Models.Appointment
@{
    ViewData["Title"] = "Edit Appointment";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Edit Appointment</h2>

    <form asp-action="EditAppointment" asp-controller="Patient" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="mb-3">
            <label asp-for="DoctorName" class="form-label">Select Doctor</label>
            <select class="form-select" name="DoctorName" required>
                <option value="">-- Choose a Doctor --</option>
                <option value="Dr. Zameer Ali" selected="@(Model.DoctorName == "Dr. Zameer Ali")">Dr. Zameer - Cardiologist</option>
                <option value="Dr. Hamza" selected="@(Model.DoctorName == "Dr. Hamza")">Dr. Hamza - Dentist</option>
                <option value="Dr. Ali" selected="@(Model.DoctorName == "Dr. Ali")">Dr. Ali - Neurologist</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="AppointmentDate" class="form-label">Select Date</label>
            <input type="date" class="form-control" name="AppointmentDate" value="@Model.AppointmentDate.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="mb-3">
            <label asp-for="TimeSlot" class="form-label">Select Time Slot</label>
            <select class="form-select" name="TimeSlot" required>
                <option value="">-- Choose a Time Slot --</option>
                <option value="10:00 AM" selected="@(Model.TimeSlot == "10:00 AM")">10:00 AM - 11:00 AM</option>
                <option value="2:00 PM" selected="@(Model.TimeSlot == "2:00 PM")">2:00 PM - 3:00 PM</option>
                <option value="5:00 PM" selected="@(Model.TimeSlot == "5:00 PM")">5:00 PM - 6:00 PM</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Reason" class="form-label">Reason for Appointment</label>
            <textarea class="form-control" name="Reason" rows="3" required>@Model.Reason</textarea>
        </div>

        <button type="submit" class="btn btn-primary w-100">Update Appointment</button>
    </form>
</div>
